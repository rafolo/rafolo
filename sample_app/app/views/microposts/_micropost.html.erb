<%if !micropost.new_record?%>

<tr>
  <td><%= micropost.content %></td>
  <td>
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </td>
  <td>
  <% if current_user?(micropost.user) %>
        <%= form_for(micropost, :method => :delete) do %>
            <%= button_tag "Button Text", :type => :submit, :class => "btn btn-xs btn-default" do %>
                <i class="icon-cog"></i>
            <% end %>
        <% end %>
  <% end %>

  </td>
</tr>
<% end %>

