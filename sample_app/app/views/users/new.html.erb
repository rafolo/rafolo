<% provide(:title, t2('Sign up')) %>
<div class="container">

  <div class="col-md-4 col-md-offset-4">

    <div class="padded">

      <div class="login box" style="margin-top: 80px;">

        <div class="box-header">
          <span class="title"><%= t2("Sign up") %></span>
        </div>

        <div class="box-content padded">
          <%= form_for(@user, :html => { :class => "separate-sections"}) do |f| %>
              <%= render 'shared/error_messages', object: @user %>
              <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-envelope"></i>
          </span>
                <%= f.text_field :email, placeholder: t2('Email') %>
              </div>

              <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-user"></i>
          </span>
                <%= f.text_field :name, placeholder: t2('Name') %>
              </div>

              <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-key"></i>
          </span>
                <%= f.password_field :password, placeholder: t2('Password') %>
              </div>

              <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-key"></i>
          </span>
                <%= f.password_field :password_confirmation, placeholder: t2('Confirm password') %>
              </div>

              <div>
                <%= f.submit t2("Create my account"), class: "btn btn-blue btn-block" %>
              </div>
          <% end %>

          <div>
            <a href="<%=signin_path%>">
              <%= t2("Already have an account ?") %> <strong><%= t2("Sign in")%></strong>.
            </a>
          </div>
        </div>

      </div>

      <div class="row">
        <div class="col-md-6">
          <a href="#" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
        </div>
        <div class="col-md-6">
          <a href="#" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
        </div>
      </div>
    </div>
  </div>
</div>