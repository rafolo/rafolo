<!doctype html>
<html>
<head>

  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">


  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <!-- Use title if it's in the page YAML frontmatter -->
  <title>Sign up</title>

  <link href="/assets/application_core_admin.css" media="screen" rel="stylesheet" type="text/css" />
  <script src="/assets/application_core_admin.js" type="text/javascript"></script>
</head>

<body>

<nav class="navbar navbar-default navbar-inverse navbar-static-top" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <a class="navbar-brand" href="#">Core Admin</a>


  </div>


</nav>
<div class="container">

  <div class="col-md-4 col-md-offset-4">

    <div class="padded">

      <div class="login box" style="margin-top: 80px;">

        <div class="box-header">
          <span class="title">Sign Up</span>
        </div>

        <div class="box-content padded">
          <%= form_for(@user, :html => { :class => "separate-sections"}) do |f| %>
            <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-envelope"></i>
          </span>
              <%= f.text_field :email, placeholder: 'Email' %>
            </div>

            <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-user"></i>
          </span>
              <%= f.text_field :name, placeholder: 'Name' %>
            </div>

            <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-key"></i>
          </span>
              <%= f.password_field :password, placeholder: 'Password' %>
            </div>

            <div class="input-group addon-left">
          <span class="input-group-addon" href="#">
            <i class="icon-key"></i>
          </span>
              <%= f.password_field :password_confirmation, placeholder: 'Confirm password' %>
            </div>

            <div>
              <%= f.submit "Create my account", class: "btn btn-blue btn-block" %>
            </div>
          <% end %>

          <div>
            <a href="login.html">
              Already have an account? <strong>Sign In</strong>
            </a>
          </div>
        </div>

      </div>

      <div class="row">
        <div class="col-md-6">
          <a href="#" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
        </div>
        <div class="col-md-6">
          <a href="#" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>