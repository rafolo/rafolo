<%= form_for(@micropost2, :html => { :class => 'fill-up'}) do |f| %>
  <%= render 'shared/error_messages', object: @micropost2 %>
    <div class="row">
      <div class="col-lg-10">
        <div class="box">
          <div class="box-header">
            <ul class="padded separate-sections">
              <li class="input">
                <%= f.text_area :content, placeholder: t2('micropost.compose'), :rows => 5 %>
              </li>
            </ul>
            <div class="form-actions">
            <%= content_tag :button, :type => :submit, :class => "btn btn-blue" do %>
                <%= t2("Create") %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>