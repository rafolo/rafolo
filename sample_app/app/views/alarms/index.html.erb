<h1>Listing alarms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Born</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alarms.each do |alarm| %>
  <tr>
    <td><%= alarm.name %></td>
    <td><%= alarm.description %></td>
    <td><%= alarm.born %></td>
    <td><%= alarm.active %></td>
    <td><%= link_to 'Show', alarm %></td>
    <td><%= link_to 'Edit', edit_alarm_path(alarm) %></td>
    <td><%= link_to 'Destroy', alarm, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

