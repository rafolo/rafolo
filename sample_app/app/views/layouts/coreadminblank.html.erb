<!doctype html>
<html>
<head>

  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">


  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <!-- Use title if it's in the page YAML frontmatter -->
  <title><%= full_title(yield(:title)) %></title>


  <!--<%= stylesheet_link_tag "application" %>-->
  <link href="/assets/application_core_admin.css" media="screen" rel="stylesheet" type="text/css"/>
  <link href="/assets/custom_core_admin.css" media="screen" rel="stylesheet" type="text/css"/>
  <!--<link href="/assets/custom.css.scss" media="screen" rel="stylesheet" type="text/css" />-->
  <%= javascript_include_tag "application" %>

  <!-- Check Deps START-->
  <%= check_modernizer%>
  <!-- Deps Check END-->

  <%= csrf_meta_tags %>
</head>

<body>

<nav class="navbar navbar-default navbar-inverse navbar-static-top" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <a class="navbar-brand" href="#">Core Admin</a>


  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse navbar-collapse-top">
    <div class="navbar-right">

      <ul class="nav navbar-nav navbar-left">
        <li class="cdrop active"><%= link_to "Home", "/" %></li>
        <li class="cdrop active"><%= link_to "Help", help_path %></li>
        <% if signed_in? %>
            <li class="cdrop active"><%= link_to "Users", users_path %></li>
            <li class="cdrop active"><%= link_to "Todo", "#/js" %></li>
            <li class="cdrop active"><%= link_to "About", "#/about" %></li>
            <li id="fat-menu" class="dropdown cdrop active">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li class="cdrop active"><%= link_to "Sign in", signin_path %></li>
        <% end %>
        <%=render "shared/localizator"%>
      </ul>

    </div>
</nav>
<%= yield %>

</body>
</html>